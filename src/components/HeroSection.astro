---
interface Props {
  imageUrl: string;
  title: string;
}

const { imageUrl, title } = Astro.props;
---

<div class="relative overflow-hidden mx-auto w-11/12 max-w-7xl rounded-3xl mt-6 md:mt-8 h-[400px] mb-8">
  <img
    src={imageUrl}
    alt={title}
    class="w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-black/40"></div>
  <div class="absolute inset-0 flex items-center justify-center text-center text-white p-4">
    <h1 class="text-4xl md:text-5xl font-extrabold px-4 drop-shadow-lg leading-tight">{title}</h1>
  </div>
</div>