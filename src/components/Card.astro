---
import type { Post } from '../types';
import { urlFor } from '../lib/image';

interface Props {
  post: Post;
}

const { post } = Astro.props;
---
<a href={`/blog/${post.slug}`} class="block bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden transform hover:-translate-y-1">
  {post.mainImage && (
    <img 
      src={urlFor(post.mainImage).url()} 
      alt={post.title} 
      class="w-full h-48 object-cover" 
    />
  )}
  <div class="p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-2">{post.title}</h2>
    <p class="text-gray-600 text-sm">{post.excerpt}</p>
  </div>
</a>